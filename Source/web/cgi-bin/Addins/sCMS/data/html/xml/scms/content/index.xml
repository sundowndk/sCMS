<sui>
	<container title="Content" icon="Icon32Edit" stylesheet="SUIContainerNoBorder">		
		<layoutbox type="vertical" width="100%" height="100%" stylesheet="SUILayoutboxNoBorder">
			<panel size="*">
				<tabview>
					<tab label="Pages" selected="true">							
						<layoutbox type="vertical" width="100%" height="100%" stylesheet="SUILayoutboxNoBorder">
							<panel size="*">
								<listview tag="addins" width="100%" height="100%">
									<column tag="id" />		
									<column tag="name" label="" width="70px" visible="true" />																	
								</listview>
							</panel>
							<panel size="100px">
								<layoutbox type="horizontal" width="100%" height="100%" stylesheet="SUILayoutboxNoBorder">
									<panel size="*">
										<button tag="pagecreate" width="100%" label="Create" disabled="true"/>
										<button tag="pageedit" width="100%" label="Edit" disabled="true"/>
										<button tag="pagedelete" width="100%" label="Delete" disabled="true"/>
									</panel>
									<panel size="80px">
										<button tag="pageup" width="100%" label="Up" disabled="true"/>
										<button tag="pagedown" width="100%" label="Down" disabled="true"/>
									</panel>
								</layoutbox>				
							</panel>
						</layoutbox>												
					</tab>	
					<tab label="Collections">
						<layoutbox type="vertical" width="100%" height="100%" stylesheet="SUILayoutboxNoBorder">
							<panel size="*">
								<listview tag="collections" width="100%" height="100%">
									<column tag="id" />		
									<column tag="enabled" label="" width="70px" visible="true" />								
									<column tag="name" label="Name" width="150px" visible="true" />
									<column tag="version" label="Version" width="70px" visible="true" />
									<column tag="description" label="Description" width="400px" visible="true" />
									<column tag="author" label="Author" width="130px" visible="true" />								
									<column tag="candisable" />								
								</listview>
							</panel>
							<panel size="100px">
								<layoutbox type="horizontal" width="100%" height="100%" stylesheet="SUILayoutboxNoBorder">
									<panel size="*">
										<button tag="collectioncreate" width="100%" label="Create" disabled="true"/>
										<button tag="collectionedit" width="100%" label="Edit" disabled="true"/>
										<button tag="collectiondelete" width="100%" label="Delete" disabled="true"/>
									</panel>
									<panel size="80px">
										<button tag="colletionup" width="100%" label="Up" disabled="true"/>
										<button tag="collectiondown" width="100%" label="Down" disabled="true"/>
									</panel>
								</layoutbox>				
							</panel>
						</layoutbox>												
					</tab>
					<tab label="Globals" selected="true">
						<layoutbox type="vertical" width="100%" height="100%" stylesheet="SUILayoutboxNoBorder">
							<panel size="*">
								<listview tag="globals" width="100%" height="100%">
									<column tag="id" />										
									<column tag="name" label="Name" width="200px" visible="true" />
									<column tag="type" label="Type" width="70px" visible="true" />									
								</listview>
							</panel>
							<panel size="100px">
								<layoutbox tag="test" type="horizontal" width="100%" height="100%" stylesheet="SUILayoutboxNoBorder">
									<panel tag="test" size="*">										
										<button tag="globaledit" width="100%" label="Edit" disabled="true"/>										
									</panel>
								</layoutbox>				
							</panel>
						</layoutbox>								
					</tab>					
				</tabview>
			</panel>
		</layoutbox>				
	</container>
</sui>