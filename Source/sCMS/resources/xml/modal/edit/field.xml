<sui elementheight="50px">	
	<layoutbox type="horizontal" stylesheet="LayoutboxNoborder">							
		<panel size="*">
			<tabview>
				<tab label="Details" selected="true">
					<layoutbox type="horizontal" stylesheet="LayoutboxNoborder">							
						<panel size="%elementheight%">
							<layoutbox type="vertical">
								<panel size="100px">
									<label text="Name"/>
								</panel>					
								<panel size="*">
									<textbox tag="name" width="100%" />
								</panel>					
							</layoutbox>
						</panel>				
						<panel size="%elementheight%">
							<layoutbox type="vertical">
								<panel size="100px">
									<label text="Type"/>
								</panel>					
								<panel size="*">
									<dropbox tag="type" width="100%">
										<item label="String" value="String" selected="true"/>
										<item label="ListString" value="ListString" />
										<item label="Text" value="Text" />
										<item label="Image" value="Image" />
										<item label="Link" value="Link" />
									</dropbox>
								</panel>					
							</layoutbox>
						</panel>																		
					</layoutbox>
				</tab>
				<tab label="Options">
					<layoutbox tag="options" type="horizontal" stylesheet="LayoutboxNoborder">							
						<panel size="%elementheight%">
							<layoutbox type="vertical">
								<panel size="100px">
									<label text="Hidden"/>
								</panel>					
								<panel size="*">
									<checkbox tag="hidden" />
								</panel>					
							</layoutbox>
						</panel>										
						<panel tag="string" size="*" hidden="true">
							<layoutbox type="horizontal" stylesheet="LayoutboxNoborder">							
								<panel size="650px">
									<layoutbox tag="stringdefaultbox" type="vertical">
										<panel size="100px">
											<label text="Default"/>
										</panel>					
										<panel tag="stringdefaultpanel" size="*">											
										</panel>					
									</layoutbox>
								</panel>
							</layoutbox>	
						</panel>						
						<panel tag="image" size="*" hidden="true">
							<layoutbox type="horizontal" stylesheet="LayoutboxNoborder">							
								<panel size="*">								
									<layoutbox type="vertical">
										<panel size="100px">
											<label text="Transformations"/>
										</panel>					
										<panel size="*">
											<layoutbox type="vertical" stylesheet="LayoutboxNoborder">
												<panel size="*">
													<listview tag="mediatransformations" width="100%" height="100%">
														<column tag="id" />
														<column tag="title" label="Title" width="150px" visible="true" />
													</listview>
												</panel>
												<panel size="105px">
													<button tag="mediatransformationadd" label="Add" />
													<button tag="mediatransformationremove" label="Remove" />
												</panel>
											</layoutbox>
										</panel>											
									</layoutbox>
								</panel>												
							</layoutbox>	
						</panel>
					</layoutbox>
				</tab>
			</tabview>																	
		</panel>
	</layoutbox>	
</sui>