<sui elementheight="50px">
	<canvas width="800px" height="400px" canScroll="false">	
		<container title="Edit javascript" icon="Icon32Edit" stylesheet="SUIContainerModal">
			<layoutbox type="horizontal" stylesheet="LayoutboxNoborder">			
				<panel size="*">
					<tabview>
						<tab label="Details" selected="true">
							<layoutbox type="horizontal">			
								<panel size="%elementheight%">
									<layoutbox type="vertical">
										<panel size="100px">
											<label text="Title"/>
										</panel>					
										<panel size="*">
											<textbox tag="title" width="100%" disabled="true" />
										</panel>					
									</layoutbox>
								</panel>
								<panel size="*">
								</panel>
							</layoutbox>
						</tab>
						<tab label="Content">
							<layoutbox type="horizontal">			
								<panel size="*">										
									<textarea tag="content" width="100%" height="100%">
										<codemirror lineNumbers="true" textWrapping="false" enterMode="keep" mode="javascript" />
									</textarea>		
								</panel>
							</layoutbox>					
						</tab>
					</tabview>
				</panel>
				<panel size="45px">
					<layoutbox type="vertical">
						<panel size="*">							
						</panel>
						<panel size="210px">
							<button tag="save" label="Save" width="100px" disabled="true"/>
							<button tag="close" label="Close" width="100px" />
						</panel>						
					</layoutbox>
				</panel>
			</layoutbox>				
		</container>
	</canvas>
</sui>





