<sui elementheight="50px">
	<tabview>
		<tab label="Details" selected="true">
			<layoutbox type="horizontal">			
				<panel size="%elementheight%">
					<layoutbox type="vertical">
						<panel size="100px">
							<label text="Title"/>
						</panel>					
						<panel size="*">
							<textbox tag="title" width="100%" disabled="true" />
						</panel>					
					</layoutbox>
				</panel>
				<panel size="*">
				</panel>
			</layoutbox>
		</tab>
		<tab label="Content">
			<layoutbox type="horizontal">			
				<panel size="*">										
					<textarea tag="content" width="100%" height="100%">
						<codemirror lineNumbers="true" textWrapping="false" enterMode="keep" mode="css" />
					</textarea>		
				</panel>
			</layoutbox>					
		</tab>
	</tabview>
</sui>




