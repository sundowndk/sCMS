<sui elementheight="50px">	
	<layoutbox type="horizontal" stylesheet="LayoutboxNoborder">			
		<panel size="%elementheight%">
			<layoutbox type="vertical">
				<panel size="100px">
					<label text="Type"/>
				</panel>					
				<panel size="*">
					<dropbox tag="type" width="100%">
						<item label="Hostname" value="Hostname" selected="true"/>
						<item label="Language" value="Language" />
						<item label="Client" value="Client" />
						<item label="OS" value="OS" />
					</dropbox>
				</panel>					
			</layoutbox>
		</panel>								
		<panel size="%elementheight%">
			<layoutbox type="vertical">
				<panel size="100px">
					<label text="Data"/>
				</panel>					
				<panel size="*">
					<textbox tag="data" width="100%" />
				</panel>					
			</layoutbox>
		</panel>				
	</layoutbox>
</sui>

