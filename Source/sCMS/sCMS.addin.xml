<Addin id          = "sCMS"              
       author      = "Rasmus Pedersen"
       copyright   = "MIT X11"
       url         = "http://www.sundown.dk/"
       description = "A CMS."
       version     = "1.5">
	<Runtime>
		<Import assembly="sCMS.dll"/>
	</Runtime>
	
	<Dependencies>
		<Addin id="Sorento" version="1.0"/>
		<Addin id="sConsole" version="2.0"/>
	</Dependencies>
		
	<Extension path = "/SorentoLib/Init">
		<Type type="sCMS.Addin.Init"/>
	</Extension>			
		
	<Extension path = "/SorentoLib/PageResponders">
		<Type type="sCMS.Addin.PageResponder"/>
	</Extension>
		
	<Extension path = "/SorentoLib/Resolver/Functions">
		<Type type="sCMS.Addin.Function"/>
	</Extension>			
		
	<Extension path = "/SorentoLib/Resolver/Renders">
		<Type type="sCMS.Addin.Render"/>
	</Extension>				
	
	<Extension path = "/SorentoLib/Resolver/Ajaxes">
		<Type type="sCMS.Addin.Ajax"/>
	</Extension>			
	
	<Extension path = "/SorentoLib/Services/Snapshots">
		<Type type="sCMS.Addin.Snapshot"/>
	</Extension>		
	
		<Extension path = "/SorentoLib/Runtime">
		<Type type="sCMS.Addin.Runtime"/>
	</Extension>
</Addin>