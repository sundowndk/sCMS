<sui elementheight="50px">
	<layoutbox type="horizontal" stylesheet="LayoutboxNoborder">
		<panel size="*">		
			<tabview>
				<tab label="Details" selected="true">
					<layoutbox type="horizontal" stylesheet="LayoutboxNoborder">			
						<panel size="%elementheight%">
							<layoutbox type="vertical">
								<panel size="100px">
									<label text="Title"/>
								</panel>					
								<panel size="*">
									<textbox tag="title" width="100%" />
								</panel>					
							</layoutbox>
						</panel>																									
					</layoutbox>	
				</tab>
				<tab label="Content">
					<layoutbox tag="fieldslayoutbox" type="horizontal" stylesheet="LayoutboxNoborder" canScroll="true">			
						<panel tag="fieldspanel" size="*" canScroll="true">
						</panel>
					</layoutbox>		
				</tab>					
			</tabview>																	
		</panel>
		<panel size="%elementheight%">
			<layoutbox type="vertical">
				<panel size="*">												
				</panel>
				<panel size="210px">
					<button tag="save" label="Save" width="100px" disabled="true"/>
					<button tag="close" label="Close" width="100px" />
				</panel>						
			</layoutbox>
		</panel>
	</layoutbox>						
</sui>







