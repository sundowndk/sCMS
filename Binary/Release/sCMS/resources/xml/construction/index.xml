<sui>
	<container title="Construction" icon="Icon32Edit" stylesheet="SUIContainerNoBorder">		
		<layoutbox type="vertical" width="100%" height="100%" stylesheet="SUILayoutboxNoBorder">
			<panel size="*">
				<tabview>
					<tab label="Templates" selected="true">
						<layoutbox type="vertical" width="100%" height="100%" stylesheet="SUILayoutboxNoBorder">
							<panel size="*">
								<listview tag="templates" width="100%" height="100%" treeview="true" treeviewLinkColumns="id:parentid" treeviewRootValue="00000000-0000-0000-0000-000000000000">
									<column tag="id" />									
									<column tag="title" label="Title" width="250px" visible="true" />									
									<column tag="parentid" />
								</listview>
							</panel>
							<panel size="100px">
								<layoutbox type="horizontal" width="100%" height="100%" stylesheet="SUILayoutboxNoBorder">
									<panel size="*">
										<button tag="templatecreate" width="100%" label="Create" disabled="false"/>
										<button tag="templateedit" width="100%" label="Edit" disabled="true"/>
										<button tag="templatedelete" width="100%" label="Delete" disabled="true"/>
									</panel>
								</layoutbox>				
							</panel>
						</layoutbox>												
					</tab>	
					<tab label="Collections"  >
						<layoutbox type="vertical" width="100%" height="100%" stylesheet="SUILayoutboxNoBorder">
							<panel size="*">
								<listview tag="collectionschemas" width="100%" height="100%">
									<column tag="id" />		
									<column tag="title" label="Title" width="200px" visible="true" />																	
								</listview>
							</panel>
							<panel size="100px">
								<layoutbox type="horizontal" width="100%" height="100%" stylesheet="SUILayoutboxNoBorder">
									<panel size="*">
										<button tag="collectionschemacreate" width="100%" label="Create" disabled="false"/>
										<button tag="collectionschemaedit" width="100%" label="Edit" disabled="true"/>
										<button tag="collectionschemadelete" width="100%" label="Delete" disabled="true"/>
									</panel>
								</layoutbox>				
							</panel>
						</layoutbox>							
					</tab>
					<tab label="Globals">
						<layoutbox type="vertical" width="100%" height="100%" stylesheet="SUILayoutboxNoBorder">
							<panel size="*">
								<listview tag="globals" width="100%" height="100%">
									<column tag="id" />		
									<column tag="name" label="Name" width="200px" visible="true" />								
									<column tag="type" label="Type" width="150px" visible="true" />									
								</listview>
							</panel>
							<panel size="100px">
								<layoutbox type="horizontal" width="100%" height="100%" stylesheet="SUILayoutboxNoBorder">
									<panel size="*">
										<button tag="globalcreate" width="100%" label="Create" disabled="false"/>
										<button tag="globaledit" width="100%" label="Edit" disabled="true"/>
										<button tag="globaldelete" width="100%" label="Delete" disabled="true"/>
									</panel>
								</layoutbox>				
							</panel>
						</layoutbox>												
					</tab>					
					<tab label="Stylesheets">
						<layoutbox type="vertical" width="100%" height="100%" stylesheet="SUILayoutboxNoBorder">
							<panel size="*">
								<listview tag="stylesheets" width="100%" height="100%">
									<column tag="id" />											
									<column tag="title" label="Title" width="200px" visible="true" />
								</listview>
							</panel>
							<panel size="100px">
								<layoutbox type="horizontal" width="100%" height="100%" stylesheet="SUILayoutboxNoBorder">
									<panel size="*">
										<button tag="stylesheetcreate" width="100%" label="Create" disabled="false"/>
										<button tag="stylesheetedit" width="100%" label="Edit" disabled="true"/>
										<button tag="stylesheetdelete" width="100%" label="Delete" disabled="true"/>
									</panel>
								</layoutbox>				
							</panel>
						</layoutbox>												
					</tab>
					<tab label="Javascript">
						<layoutbox type="vertical" width="100%" height="100%" stylesheet="SUILayoutboxNoBorder">
							<panel size="*">
								<listview tag="javascripts" width="100%" height="100%">
									<column tag="id" />											
									<column tag="title" label="Title" width="200px" visible="true" />
								</listview>
							</panel>
							<panel size="100px">
								<layoutbox type="horizontal" width="100%" height="100%" stylesheet="SUILayoutboxNoBorder">
									<panel size="*">
										<button tag="javascriptcreate" width="100%" label="Create" disabled="false"/>
										<button tag="javascriptedit" width="100%" label="Edit" disabled="true"/>
										<button tag="javascriptdelete" width="100%" label="Delete" disabled="true"/>
									</panel>
								</layoutbox>				
							</panel>
						</layoutbox>												
					</tab>
					<tab label="Roots">
						<layoutbox type="vertical" width="100%" height="100%" stylesheet="SUILayoutboxNoBorder">
							<panel size="*">
								<listview tag="roots" width="100%" height="100%">
									<column tag="id" />											
									<column tag="title" label="Title" width="150px" visible="true" />									
								</listview>
							</panel>
							<panel size="100px">
								<layoutbox type="horizontal" width="100%" height="100%" stylesheet="SUILayoutboxNoBorder">
									<panel size="*">
										<button tag="rootcreate" width="100%" label="Create" disabled="false"/>
										<button tag="rootedit" width="100%" label="Edit" disabled="true"/>
										<button tag="rootdelete" width="100%" label="Delete" disabled="true"/>
									</panel>
								</layoutbox>				
							</panel>
						</layoutbox>								
					</tab>					
				</tabview>
			</panel>
		</layoutbox>				
	</container>
</sui>
